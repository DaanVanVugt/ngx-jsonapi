{
  "compilerOptions": {
    "strictNullChecks": true,
    "baseUrl": ".",
    "declaration": true,
    "stripInternal": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "../dist/",
    "paths": { },
    "rootDir": ".",
    "sourceMap": true,
    "inlineSources": true,
    "target": "es2015",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "strict": false,
    "importHelpers": true
  },
  "format": "es2015",
  "files": [
    "public_api.ts"
  ],
  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "strictMetadataEmit": false,
    "flatModuleOutFile": "index.js",
    "flatModuleId": "ngx-jsonapi",
    "enableIvy": false
  }
}
